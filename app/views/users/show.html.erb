<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<div class="text-center mt-4">
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar, class: "rounded-circle", size: "200x200", alt: @user.username %>
  <% else %>
  <div class="rounded-circle d-inline-flex align-items-center justify-content-center bg-primary text-white" style="width: 150px; height: 150px; font-size: 48px; font-weight: bold;">
  <%= @user.username.first.upcase %>
</div>
  <% end %>
</div>

<% if logged_in? and @user == current_user%>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  </div>
<% end %>

<hr class="my-5 elegant-hr">
<style>
.elegant-hr {
  border: none;
  height: 1px;
  background: linear-gradient(90deg, transparent, #6c757d, transparent);
  margin: 2rem auto;
  width: 80%;
}
</style>

<h3 class="text-center mt-4">Articles</h3>
<%= render 'articles/article'%>
<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>