<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true,  multipart: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :image, "Article Image", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.file_field :image, class: "form-control shadow rounded",
                onchange: "document.getElementById('article-image-preview').src = window.URL.createObjectURL(this.files[0]); 
                document.getElementById('article-image-preview').classList.remove('d-none')",
                accept: "image/*" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <div class="col-10 text-center">
            <img id="article-image-preview" src="#" alt="Article image preview" 
            class="img-fluid mt-2 d-none rounded" style="max-height: 300px;">
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class:"btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and Return to Articles listing ]', articles_path, class: "text-info" %>
  </div>
</div>